{
  "compilerOptions": {
    "target": "es2020",                                   
    "lib": ["es6"],                                       
    "experimentalDecorators": true,                    
    "emitDecoratorMetadata": true,                   
    "module": "commonjs",                                 
    "rootDir": "./",                                     
    "baseUrl": "./",                                   
    "paths": {
      "@config/*": ["src/config/*"],
      "@modules/*": ["src/modules/*"],
      "@shared/*": ["src/shared/*"],
      "error-utils": ["node_modules/@higorticketing/common/build"]
    },                                       
    "typeRoots": [
      "@types",
      "./node_modules/@types"
    ],                                   
    "resolveJsonModule": true,                            
    "allowJs": true,                                      
    "outDir": "dist",                                    
    "esModuleInterop": true,                              
    "forceConsistentCasingInFileNames": true,             
    "strict": true,                                       
    "noImplicitAny": true,                                
    "strictPropertyInitialization": false,              
    "skipLibCheck": true                               
  }
}